<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="@string/string_number_of_strings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="46dp"
        android:id="@+id/id_number_of_string"/>

    <TextView
        android:text="@string/Correct_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_number_of_string"
        android:layout_alignRight="@+id/id_number_of_string"
        android:layout_alignEnd="@+id/id_number_of_string"
        android:layout_marginTop="49dp"
        android:id="@+id/textView3"/>

    <TextView
        android:text="@string/strings_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="51dp"
        android:id="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_toRightOf="@+id/id_number_of_string"
        android:layout_toEndOf="@+id/id_number_of_string"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/id_number_of_strings_num"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/id_number_of_strings_num"
        android:layout_alignStart="@+id/id_number_of_strings_num"
        android:id="@+id/id_http"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/id_http"
        android:layout_alignStart="@+id/id_http"
        android:id="@+id/id_list"/>
</RelativeLayout>